<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	<mapper namespace="com.sundostudio.mapper.MemberMapper">
	<insert id="join">
	INSERT INTO tbl_member(userid,userpw,username,nickname) 
	values(#{userid},#{userpw},#{username},#{nickname})
	</insert>
	
	<select id="findByUserid" resultType="com.sundostudio.dto.MemberVO">
	SELECT*FROM tbl_member where userid = #{userid}
	</select>
	
	<select id = "getAuthByUserid" resultType = "com.sundostudio.dto.AuthVO">
	SELECT*FROM tbl_member_authorities where userid = #{userid}
	</select>
	</mapper>
	